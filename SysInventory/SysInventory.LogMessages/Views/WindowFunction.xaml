<Window x:Class="SysInventory.LogMessages.Views.WindowFunction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SysInventory.LogMessages.ViewModels"
        mc:Ignorable="d"
        Title="WindowFunction" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:WindowFunctionViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DataGrid SelectionMode="Single" ItemsSource="{Binding ShowingItems}" Grid.Row="0" Grid.Column="0" CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserResizeRows="True" CanUserSortColumns="True" IsReadOnly="true"/>
        <Button Grid.Row="2" Grid.Column="0"  Command="{Binding LoadWindowFunctionResultsCommand}" Content="Load"/>
    </Grid>
</Window>
