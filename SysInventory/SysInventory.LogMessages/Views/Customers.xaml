<Window x:Class="SysInventory.LogMessages.Views.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SysInventory.LogMessages.ViewModels"
        mc:Ignorable="d"
        Title="Customers" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:CustomersViewModel />
    </Window.DataContext>
    <StackPanel Orientation="Vertical" Margin="10">
        <GroupBox Header="Search">
            <StackPanel Orientation="Vertical">
                <Label>Customer No.</Label>
                <TextBox Text="{Binding CustomerNoSearchParam}"/>
                <Label>Name</Label>
                <TextBox Text="{Binding NameSearchParam}"/>
                <Label>Mail</Label>
                <TextBox Text="{Binding MailSearchParam}"/>
                <Button Content="Find Customers" Command="{Binding SearchCommand}"></Button>
            </StackPanel>
        </GroupBox>
        <DataGrid ItemsSource="{Binding ShowingItems}"/>
    </StackPanel>
</Window>
